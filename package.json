{
  "name": "eve-settings-manager",
  "version": "0.0.1",
  "description": "EVE Online Settings Manager",
  "main": "src/main.js",
  "repository": "github.com/mintnick/eve-settings-manager",
  "author": "Nick Ning",
  "license": "MIT",
  "devDependencies": {
    "@electron-forge/maker-rpm": "^6.0.4",
    "electron": "^22.0.0",
    "electron-builder": "^23.6.0",
    "nconf": "^0.12.0"
  },
  "dependencies": {
    "electron-prompt": "^1.7.0",
    "electron-squirrel-startup": "^1.0.0",
    "electron-store": "^8.1.0",
    "jquery": "^3.6.3",
    "phin": "^3.7.0"
  },
  "scripts": {
    "dev": "electron .",
    "pack": "electron-builder --dir",
    "dist": "electron-builder --win --mac"
  },
  "build": {
    "appId": "eve-settings-manager",
    "productName": "EVE Settings Manager",
    "mac": {
      "icon": "src/assets/icon.png"
    },
    "win": {
      "target": ["portable"]
    },
    "portable": {
        "artifactName": "EVE Settings Manager.exe"
    }
  }
}
